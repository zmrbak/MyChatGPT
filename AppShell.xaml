<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyChatGPT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MyChatGPT.Views"
    Shell.FlyoutBehavior="Flyout">
    <ShellContent
        Title="聊天"
        ContentTemplate="{DataTemplate view:ChatPage}"
        Route="ChatPage" />
    <ShellContent
        Title="画画"
        ContentTemplate="{DataTemplate view:DrawPage}"
        Route="DrawPage" />
    <ShellContent
        Title="系统设置"
        ContentTemplate="{DataTemplate view:SettingsPage}"
        Route="SettingsPage" />
</Shell>
